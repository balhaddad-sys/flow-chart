      "**/__tests__/**/*.test.js"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@google-cloud/storage": "^7.7.0",
    "@google/generative-ai": "^0.24.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "jsonrepair": "^3.13.2",
    "jszip": "^3.10.1",
    "mammoth": "^1.8.0",
    "p-limit": "^3.1.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "firebase-functions-test": "^3.3.0",
    "jest": "^29.7.0"
  },
  "private": true
