rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // User uploads: PDF, PPTX, DOCX files (max 100MB)
    match /users/{userId}/uploads/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource != null
        && request.resource.size < 100 * 1024 * 1024
        && request.resource.contentType.matches('application/(pdf|vnd\\.openxmlformats.*|msword)');
    }

    // Derived content: read-only for users, Cloud Functions write via Admin SDK
    match /users/{userId}/derived/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Exports: read-only for users
    match /users/{userId}/exports/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
