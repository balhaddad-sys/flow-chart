rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isValidString(field, maxLen) {
      return field is string && field.size() > 0 && field.size() <= maxLen;
    }

    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // Internal collections (Cloud Functions only via Admin SDK)
    match /_rateLimits/{doc} {
      allow read, write: if false;
    }

    match /_health/{doc} {
      allow read, write: if false;
    }

    match /_knowledgeCache/{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId)
        && hasRequiredFields(['name', 'email'])
        && isValidString(request.resource.data.name, 200)
        && isValidString(request.resource.data.email, 320);
      allow update: if isOwner(userId)
        && (!('name' in request.resource.data) || isValidString(request.resource.data.name, 200))
        && (!('email' in request.resource.data) || isValidString(request.resource.data.email, 320));
      allow delete: if isOwner(userId);

      match /courses/{courseId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && hasRequiredFields(['title'])
          && isValidString(request.resource.data.title, 500)
          && (!('tags' in request.resource.data) || request.resource.data.tags.size() <= 20)
          && (!('examType' in request.resource.data) || request.resource.data.examType in ['SBA', 'OSCE', 'Mixed']);
        allow update: if isOwner(userId)
          && (!('title' in request.resource.data) || isValidString(request.resource.data.title, 500))
          && (!('tags' in request.resource.data) || request.resource.data.tags.size() <= 20);
        allow delete: if isOwner(userId);
      }

      match /files/{fileId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && hasRequiredFields(['originalName', 'storagePath', 'mimeType'])
          && isValidString(request.resource.data.originalName, 500)
          && request.resource.data.mimeType in [
            'application/pdf',
            'application/vnd.openxmlformats-officedocument.presentationml.presentation',
            'application/vnd.openxmlformats-officedocument.wordprocessingml.document'
          ]
          // TICKET PATTERN: Prevent clients from pre-filling completion data
          && (!('blueprint' in request.resource.data))
          && (!('sections' in request.resource.data));
        // TICKET PATTERN: Only Cloud Functions (Admin SDK) can update processing status
        // Clients can only update metadata fields like title
        allow update: if isOwner(userId)
          && (!('status' in request.resource.data) || resource.data.status == request.resource.data.status)
          && (!('processingPhase' in request.resource.data) || resource.data.processingPhase == request.resource.data.processingPhase)
          && (!('blueprint' in request.resource.data))
          && (!('processingCompletedAt' in request.resource.data));
        allow delete: if isOwner(userId);
      }

      match /sections/{sectionId} {
        allow read: if isOwner(userId);
        // TICKET PATTERN: Sections are created by Cloud Functions, client can only update title
        // Protect AI lifecycle fields from client tampering
        allow update: if isOwner(userId)
          && (!('title' in request.resource.data) || isValidString(request.resource.data.title, 500))
          && (!('aiStatus' in request.resource.data) || resource.data.aiStatus == request.resource.data.aiStatus)
          && (!('questionsStatus' in request.resource.data) || resource.data.questionsStatus == request.resource.data.questionsStatus)
          && (!('blueprint' in request.resource.data));
        allow delete: if isOwner(userId);
      }

      match /tasks/{taskId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId)
          && (!('status' in request.resource.data) || request.resource.data.status in ['TODO', 'IN_PROGRESS', 'DONE', 'SKIPPED']);
        allow delete: if isOwner(userId);
      }

      match /questions/{questionId} {
        allow read: if isOwner(userId);
        // SECURITY: Clients can only update non-critical fields
        // Prevent tampering with correctIndex, options, or AI-generated content
        allow update: if isOwner(userId)
          && (!('correctIndex' in request.resource.data) || request.resource.data.correctIndex == resource.data.correctIndex)
          && (!('options' in request.resource.data) || request.resource.data.options == resource.data.options)
          && (!('stem' in request.resource.data) || request.resource.data.stem == resource.data.stem)
          && (!('explanation' in request.resource.data) || request.resource.data.explanation == resource.data.explanation);
        allow delete: if isOwner(userId);
      }

      match /attempts/{attemptId} {
        allow read: if isOwner(userId);
        // SECURITY: Only Cloud Functions can create attempts (via submitAttempt callable)
        // This prevents clients from forging correct/incorrect status and corrupting stats
        allow create: if false;
      }

      match /stats/{statsId} {
        allow read: if isOwner(userId);
      }

      match /examBank/{examId} {
        allow read: if isOwner(userId);
        // Only Cloud Functions (Admin SDK) can write exam bank data
      }

      match /jobs/{jobId} {
        allow read: if isOwner(userId);
      }

      // Consumer-ready: Question flags (students report issues)
      match /flags/{flagId} {
        allow read: if isOwner(userId);
        // Clients cannot create flags directly — must go via flagQuestion callable
        allow create: if false;
      }

      // Consumer-ready: Daily activity tracking for streak graph
      match /activity/{dateKey} {
        allow read: if isOwner(userId);
        // Only Cloud Functions (trackActivity trigger) can write activity docs
        allow write: if false;
      }

      // Chat threads and messages (AI Study Assistant)
      match /chatThreads/{threadId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && hasRequiredFields(['courseId', 'title']);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }

      match /chatMessages/{messageId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId)
          && hasRequiredFields(['threadId', 'role', 'content'])
          && request.resource.data.role in ['user', 'assistant'];
        allow delete: if isOwner(userId);
      }
    }

    // Study groups (top-level)
    // Read allowed for any signed-in user (needed for join-by-invite-code lookup)
    // Write restricted to members / creator
    match /studyGroups/{groupId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn()
        && hasRequiredFields(['name', 'inviteCode', 'createdBy', 'members'])
        && request.auth.uid == request.resource.data.createdBy
        && request.auth.uid in request.resource.data.members;

      // Case 1: Existing member updating the group
      //   - Immutable fields (inviteCode, createdBy) cannot change
      //   - Only the creator can rename the group
      // Case 2: Non-member joining via invite code
      //   - All immutable fields preserved
      //   - Members array is strictly additive: old members + joiner's UID only
      allow update: if isSignedIn()
        && (
          // Existing member
          (request.auth.uid in resource.data.members
            && request.resource.data.inviteCode == resource.data.inviteCode
            && request.resource.data.createdBy == resource.data.createdBy
            && (request.resource.data.name == resource.data.name
                || request.auth.uid == resource.data.createdBy))
          ||
          // Non-member joining — strict additive-only
          (!(request.auth.uid in resource.data.members)
            && request.auth.uid in request.resource.data.members
            && request.resource.data.inviteCode == resource.data.inviteCode
            && request.resource.data.createdBy == resource.data.createdBy
            && request.resource.data.name == resource.data.name
            && request.resource.data.members.size() == resource.data.members.size() + 1
            && request.resource.data.members.hasAll(resource.data.members))
        );

      allow delete: if isSignedIn()
        && request.auth.uid == resource.data.createdBy;
    }
  }
}
